{
  "name": "ledger-management-system",
  "version": "1.0.0",
  "description": "Complete ledger management system with Good in Cart functionality",
  "main": "electron.js",
  "homepage": "./",
  "scripts": {
    "electron": "electron .",
    "electron-dev": "ELECTRON_IS_DEV=true electron .",
    "build:web": "vite build",
    "build:electron": "npm run build:web && electron-builder",
    "build:all": "npm run build:web && npm run build:windows && npm run build:linux && npm run build:mac",
    "build:windows": "npm run build:web && electron-builder --win",
    "build:linux": "npm run build:web && electron-builder --linux",
    "build:mac": "npm run build:web && electron-builder --mac",
    "dist": "npm run build:web && electron-builder --publish=never"
  },
  "build": {
    "appId": "com.ledgerapp.desktop",
    "productName": "Ledger Management System",
    "directories": {
      "output": "dist-electron"
    },
    "files": ["dist/**/*", "electron.js", "preload.js", "node_modules/**/*"],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "artifactName": "LedgerApp-Setup-${version}.exe"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png",
      "category": "Office"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.business"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Ledger App"
    }
  },
  "devDependencies": {
    "electron": "^22.0.0",
    "electron-builder": "^23.6.0",
    "electron-is-dev": "^2.0.0"
  }
}
